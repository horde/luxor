   <dir name="locale">
    <dir name="de">
     <dir name="LC_MESSAGES">
      <file name="luxor.mo" role="horde" />
      <file name="luxor.po" role="horde" />
     </dir> <!-- /locale/de/LC_MESSAGES -->
    </dir> <!-- /locale/de -->
    <dir name="es">
